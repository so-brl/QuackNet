        <link rel="stylesheet" href="{{ asset('build/app.css') }}" type="text/css"/>
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
    {% if app.request.get('_route') != 'home' %}
    {{ include('navBar/navbar.html.twig') }}
    {% endif %}
    {% if app.request.get('_route') == 'quack_index' %}
<div class="container d-flex justify-content-end mt-5">
    <form class="form-inline my-2 my-lg-0 custom-navbar">
        {{ form_start(searchForm) }}
        {{ form_row(searchForm.q, {'label': " ", 'attr': {'placeholder': 'Rechercher un Duck ou des tags'}}) }}
        <button class="ml-3 btn btn-primary">Rechercher</button>
        {{ form_end(searchForm) }}
    </form>
</div>
    {% endif %}
        {% block body %}
        {% endblock %}
    {{ include('footer/footer.html.twig') }}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
