{% extends 'base.html.twig' %}

{% block title %}Quack index{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-raw flex-nowrap">
        <div class=" pl-5" style="height: 100vh">
            <div class="mh-100">
                <h1 class="d-none">Liste des Quacks</h1>

                {% if app.user %}
                    <ul class="">
                        {#                        <li><a class="dropdown-item" href="/duck/new">Ajouter un Duck</a></li>#}
                        <li><a class="" href="/duck/{{ app.user.id }}"><i class="fas fa-user"></i>   {{ app.user.username  }} </a></li>
                    </ul>
                {% else %}
                    <ul class="">
                        <li class=""><a class="nav-link" href="/quack">La marre</a></li>
                        <li class=""><a class="nav-link" href="/login">Connexion</a></li>
                        <li class=""><a class="nav-link" href="/register">Inscription</a></li>
                    </ul>
                {% endif %}

            </div>
        </div>
        <div class=" col-7 d-flex flex-column justify-content-between position-relative">

            <div class=" m-5">


                <div class="row">
                    {% for quack in quacks |sort((a, b) => b.createdAt <=> a.createdAt) %}

                        <div class="card  p-1">
                            <div class="card-body m-1">
                                <div class="d-flex justify-content-between">
                                    <h4 class="card-title"> {{ quack.Auteur.duckname }}</h4>
                                    <small>{{ quack.createdAt ? quack.createdAt|date('d-m-y h:i:s') : '' }}</small>
                                </div>
                                <div class="d-flex justify-content-start">
                                    <h6 class="card-subtitle mb-2 text-muted">Infos sur le Duck à implémenter</h6>
                                </div>
                                <div class="d-flex justify-content-start">
                                    {% for tag in quack.tags %}
                                        <a class="badge badge-pill badge-primary mr-1"
                                           style="height: fit-content">{{ tag }}</a>
                                    {% endfor %}
                                </div>

                                <img class="d-block user-select-none pb-3 pt-3" width="100%" height="auto"
                                     src="/uploads/{{ quack.uploadFileName }}">
                                <p class="card-text"> {{ quack.content }}</p>
                                <div class="d-flex justify-content-end">
                                    <a href="{{ path('quack_show', {'id': quack.id}) }}" class="card-link">Lire le
                                        Quack</a>
                                </div>
                            </div>
                            {% if is_granted('edit', quack) %}
                                <div class="d-flex justify-content-end">
                                    <a class="" href="{{ path('quack_edit', {'id': quack.id}) }}">Modifier</a>
                                </div>
                            {% endif %}
                        </div>

                    {% else %}
                        <div>
                            <p>no records found
                            <p>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
        <div class=" mr-5 pr-5" style=" height: 100vh">
            <div class="mh-100">
                {% if app.user %}
                    <ul class="">
                        <li><a class="btn btn-primary btn-sm" href="/quack/new"><i class="fas fa-plus"></i>Ajouter un Quack</a></li>
                        <li><a class="" href="/quack">Liste des Quacks</a></li>
                        <li><a class="" href="/duck/">Liste des Ducks</a></li>
                        {#                        <li><a class="dropdown-item" href="/duck/new">Ajouter un Duck</a></li>#}
                        <li><a class="" href="/duck/{{ app.user.id }}"><i class="fas fa-user"></i>Mon Profil</a></li>
                    </ul>
                {% else %}
                    <ul class="">
                        <li class=""><a class="nav-link" href="/quack">La marre</a></li>
                        <li class=""><a class="nav-link" href="/login">Connexion</a></li>
                        <li class=""><a class="nav-link" href="/register">Inscription</a></li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
