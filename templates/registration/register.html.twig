{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block registration %}
    <div class="home container-fluid d-flex align-items-center  "  style="height: 100vh; background-image: url('{{ asset('build/quacknetBg.jpg') }}'); background-size: cover; background-repeat: no-repeat">
        <div class="container cardCustom  d-flex flex-column align-items-center ">
            <div class=" d-flex flex-column home_identity justify-content-between align-items-center">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
                    <h3 class="text-center">Quacknet</h3>
                    <h4>Inscription</h4>

            <div class="d-flex justify-content-center">
                {{ form_start(registrationForm) }}
                <div class="d-flex">
                    <div class="mr-3">
                        {{ form_row(registrationForm.firstname, {
                            label: 'Nom'
                        }) }}
                    </div>

                    {{ form_row(registrationForm.lastname, {
                        label: 'Prenom'
                    }) }}
                </div>

                {{ form_row(registrationForm.duckname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <button class="btn btn-primary mt-3" type="submit" style="width: 100%;">Inscription</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    </div>
{% endblock %}
