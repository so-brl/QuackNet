{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container " >
    <div class="home container-fluid d-flex align-items-center  " >
        <div class="container " >
            <div class=" d-flex flex-column home_identity justify-content-center align-items-center">
                <div class="text-center">
                    <a href="/"><img class="home_identity_logo mb-3" src="{{ asset('build/duck-white.svg') }}" alt="quacknet-logo"></a>
                    <h1 class="home_identity">QUACKNET</h1>
                    <p class="home_identity">A votre tour de cancaner<span>*</span> dans la marre.</p>

                </div>
            </div>


        </div>

    </div>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-center mt-5 yellow-text">Inscription</h1>
        <div  class="d-flex justify-content-center mt-5">

    {{ form_start(registrationForm) }}
<div class="d-flex">
    <div class="mr-3">
        {{ form_row(registrationForm.firstname, {
            label: 'Nom'
        }) }}
    </div>

    {{ form_row(registrationForm.lastname, {
        label: 'Prenom'
    })  }}
</div>

        {{ form_row(registrationForm.duckname) }}
            {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
            <button class="btn btn-primary mb-5 mt-3" type="submit" class="btn">Inscription</button>
        </div>

    {{ form_end(registrationForm) }}
        <p class="text-center mb-5">
            <small>* Faire courir des bruits de couloir et des bavardages malveillants. <br>Médire de quelqu'un en
                colportant des propos négatifs dans l'intention de nuire. <br>Expression synonyme de babiller ou
                jaser appartenant au langage familier. </small>
        </p>
</div>
{% endblock %}
