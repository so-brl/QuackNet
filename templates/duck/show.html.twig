{% extends 'base.html.twig' %}
{% block title %}Profil de {{ duck.lastname }} {{ duck.firstname }}{% endblock %}
     {% block content %}
         <div class=" m-5">
             <div class="d-flex flex-column">
                 <div class="card  p-1">

                     <div class="card-body m-1  ">

                         <div class="d-flex flex-row align-items-center justify-content-between">
                             <div class="d-flex flex-row align-items-center">
                                 <img class="profilPicture d-block user-select-none pb-3 pt-3"
                                      src="/uploads/{{ duck.uploadFileName }}">
                                 <div class="d-flex flex-column justify-content-between ml-4">
                                     <h1 class="card-title"> {{ duck.lastname }} {{ duck.firstname }}</h1>
                                     <small>Inscrit depuis le 00:00:00</small>
                                 </div>
                             </div>

                             {% if is_granted('edit', duck) %}
                                 <div class="d-flex justify-content-end">
                                     <a class="btn btn-secondary btn-sm" href="{{ path('duck_edit', {'id':  duck.id}) }}">Modifier</a>
                                 </div>
                             {% endif %}
                         </div>
                         <table class="table">
                             <tbody>
                             <tr>
                                 <th>Nom :</th>
                                 <td>{{ duck.firstname }}</td>
                             </tr>
                             <tr>
                                 <th>Pr√©nom :</th>
                                 <td>{{ duck.lastname }}</td>
                             </tr>
                             <tr>
                                 <th>Duckname :</th>
                                 <td>{{ duck.duckname }}</td>
                             </tr>
                             <tr>
                                 <th>Email :</th>
                                 <td>{{ duck.email }}</td>
                             </tr>
                             </tbody>
                         </table>
                         <div class="d-flex justify-content-end">
                             {{ include('duck/_delete_form.html.twig') }}
                         </div>

                     </div>

                 </div>
             </div>
         </div>

     {% endblock %}

